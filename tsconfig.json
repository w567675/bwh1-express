{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es6",
		"target": "es5",
		"sourceMap": true,
		"strict": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"allowJs": true,
		"outDir": "build",
		"rootDir": "./src"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}